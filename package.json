{
	"name": "stream-blockify",
	"version": "0.1.1-2",
	"description": "A powerful Node.js library for processing streams in fixed-size blocks",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"lint": "eslint \"src/**/*.ts\" ",
		"lint:fix": "eslint  \"src/**/*.ts\" --fix",
		"build": "tsc",
		"prestart": "npm run build",
		"clean": "rm -rf dist",
		"ts:check-types": "tsc",
		"ts:check-types:watch": "tsc --watch",
		"check-code": "npm run test && npm run lint && npm run ts:check-types",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"prepublish": "npm run clean && npm run build",
		"docs": "typedoc"
	},
	"documentation": "https://github.com/ahmedheltaher/stream-blockify/blob/main/DOCUMENTATION.md",
	"keywords": [
		"nodejs",
		"typescript",
		"stream",
		"buffer",
		"chunking",
		"data-processing",
		"block-stream",
		"stream-transformer",
		"block",
		"transform",
		"processing"
	],
	"author": {
		"name": "Ahmed Eltaher",
		"email": "ahmedheltaher@gmail.com",
		"url": "https://github.com/ahmedheltaher"
	},
	"license": "ISC",
	"devDependencies": {
		"@types/debug": "^4.1.12",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.10",
		"@typescript-eslint/eslint-plugin": "^8.26.1",
		"@typescript-eslint/parser": "^8.26.1",
		"debug": "^4.4.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.0",
		"typescript": "^5.8.2"
	}
}
